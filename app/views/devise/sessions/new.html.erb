
<div class="row justify-content-center min-vh-100 mt-5">
  <%= image_tag "passlinelogo.png", class:"logo-form ", size:""  ,alt:"passline" %>
  <div class="row justify-content-center">
    <div class="col-11 col-sm-8 col-lg-5">
      <div class="card shadow w-100 text-center px-none px-sm-3 py-4">
        <div class="card-body p-3">
          <h1 class="text-9 fw-bold pb-2">Inicia Sesión</h1>
          <p class="card-text pb-3">Ingresa a tu cuenta de Passline y disfruta de tus eventos favoritos</p>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="alert-form-error alert alert-danger d-none mt-4">
                <strong>Error!</strong> correo o contraseña inválida, intente otra vez.                          <span class="mail-error-message text-1 d-block"></span>
              </div>
              <div class="form-group form-floating mb-4">
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
                <%= f.label :email%><br />
                <div class="invalid-feedback">Ingresa un correo válido</div>
              </div>
              <div class="form-group form-floating mb-4">
                <%= f.password_field :password, autocomplete: "current-password", class:"form-control" %>
                <%= f.label :password %><br />
                <div class="invalid-feedback">Ingresa tu contraseña</div>
                <span class="input-icon-right hand-hover fs-5" id="showhidepassword" data-showhide="#passwordlogin"><i class="bi bi-eye-slash"></i></span>
              </div>
              <div class="form-group mb-2">
                <div class="col-12">
                  <%= f.submit "Log in", class:"btn btn-primary btn-lg fs-6" %>
                </div>
              </div>
              <%= link_to "Olvidaste tu contraseña?", new_password_path(resource_name), class:"text-dark mb-3" %><br />
              <%= link_to "Registrate", new_registration_path(resource_name), class:"text-dark mb-3" %><br />
              <% if devise_mapping.rememberable? %>
                <div class="field">
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me %>
                </div>
              <% end %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
