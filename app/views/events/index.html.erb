<div class="container">
  <div class="row">
    <% @events.each do |e|  %>
      <div class="col">
        <div class="card" style="width: 18rem;">
          <% if  e.photo.attached? %>
            <%= image_tag e.photo, class:"card-img-top"%>
          <% else %>
              <%= image_tag "noimage.jpg",class:"card-img-top"%>
          <% end %>
            <div class="card-body">
              <h5 class="card-title"><%= e.title %></h5>
               <p class="card-text"><%= e.description %></p>
                <%= link_to "Ver mas", event_path(e), class:"btn btn-primary" %>

            </div>
        </div>
      </div>
    <% end %>
   </div>
</div>
